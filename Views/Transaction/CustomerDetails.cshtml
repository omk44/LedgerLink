@* Path: LedgerLink/Views/Transaction/CustomerDetails.cshtml *@
@model LedgerLink.Models.CustomerDetailsViewModel
@using System.Globalization;

@{
    ViewData["Title"] = $"Transaction for {Model.Customer.FullName}";
    var indiaCulture = new CultureInfo("en-IN");
}

<div class="container mt-5">
    <h2>Transaction for @Model.Customer.FullName</h2>
    <hr />

    @* Display Success/Error Messages *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h4>Customer Information</h4>
                </div>
                <div class="card-body">
                    <p><strong>Name:</strong> @Model.Customer.FullName</p>
                    <p><strong>Phone:</strong> @Model.Customer.PhoneNumber</p>
                    <p><strong>Email:</strong> @Model.Customer.Email</p>
                    <p><strong>Address:</strong> @Model.Customer.Address</p>
                    <h5 class="text-danger"><strong>Current Balance:</strong> @Model.Customer.CurrentBalance.ToString("C", indiaCulture)</h5>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <h4>Add Item to Transaction</h4>
                </div>
                <div class="card-body">
                    <form id="addItemForm" asp-controller="Transaction" asp-action="AddItem" method="post">
                        <input type="hidden" name="customerId" value="@Model.Customer.Id" />
                        <div class="form-group mb-3">
                            <label for="productId" class="form-label">Select Product:</label>
                            <select id="productId" name="productId" class="form-control">
                                @if (Model.Products.Any())
                                {
                                    @foreach (var product in Model.Products)
                                    {
                                        <option value="@product.Id" data-price="@product.Price">@product.Name - @product.Price.ToString("C", indiaCulture)</option>
                                    }
                                }
                                else
                                {
                                    <option value="">No products available. Add some from Product Management.</option>
                                }
                            </select>
                        </div>
                        <div class="form-group mb-3">
                            <label for="quantity" class="form-label">Quantity:</label>
                            <input type="number" id="quantity" name="quantity" class="form-control" value="1" min="1" />
                        </div>
                        <div class="form-group form-check mb-3">
                            <input type="checkbox" class="form-check-input" id="isCreditTransaction" name="isCreditTransaction" value="true" />
                            <label class="form-check-label" for="isCreditTransaction">Add to Credit (Money Pending)</label>
                        </div>
                        @* NEW: Payment Mode for non-credit transactions *@
                        <div class="form-group mb-3" id="paymentModeForAddItemDiv">
                            <label for="paymentMode" class="form-label">Payment Mode (if not credit):</label>
                            <select id="paymentMode" name="paymentMode" class="form-control">
                                <option value="Cash">Cash</option>
                                <option value="UPI">UPI</option>
                                <option value="Card">Card</option>
                                <option value="Bank Transfer">Bank Transfer</option>
                            </select>
                        </div>
                        <div class="form-group mb-3">
                            <label for="notes" class="form-label">Notes (Optional):</label>
                            <textarea id="notes" name="notes" class="form-control" rows="2"></textarea>
                        </div>
                        <button type="submit" class="btn btn-success w-100">Record Sale</button>
                    </form>
                </div>
            </div>

            <div class="card shadow-sm mt-4">
                <div class="card-header bg-warning text-dark">
                    <h4>Record Payment</h4>
                </div>
                <div class="card-body">
                    <form id="addPaymentForm" asp-controller="Transaction" asp-action="AddPayment" method="post">
                        <input type="hidden" name="customerId" value="@Model.Customer.Id" />
                        <div class="form-group mb-3">
                            <label for="amountPaid" class="form-label">Amount Paid:</label>
                            <input type="number" step="0.01" id="amountPaid" name="amountPaid" class="form-control" value="0.00" min="0.01" />
                        </div>
                        <div class="form-group mb-3">
                            <label for="paymentMode" class="form-label">Payment Mode:</label>
                            <select id="paymentMode" name="paymentMode" class="form-control">
                                <option value="Cash">Cash</option>
                                <option value="UPI">UPI</option>
                                <option value="Card">Card</option>
                                <option value="Bank Transfer">Bank Transfer</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-warning w-100">Record Payment</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4>Transaction History</h4>
                </div>
                <div class="card-body">
                    @if (!Model.Transactions.Any())
                    {
                        <p class="text-muted">No transactions recorded for this customer yet.</p>
                    }
                    else
                    {
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Product</th>
                                    <th>Qty</th>
                                    <th>Unit Price</th>
                                    <th>Total</th>
                                    <th>Credit?</th>
                                    <th>Notes</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var transaction in Model.Transactions)
                                {
                                    <tr>
                                        <td>@transaction.PurchaseDate.ToLocalTime().ToString("g")</td>
                                        <td>@(transaction.Product?.Name ?? "N/A")</td>
                                        <td>@transaction.Quantity</td>
                                        <td>@transaction.UnitPrice.ToString("C", indiaCulture)</td>
                                        <td>@transaction.TotalAmount.ToString("C", indiaCulture)</td>
                                        <td>@(transaction.IsCreditTransaction ? "Yes" : "No")</td>
                                        <td>@transaction.Notes</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h4>Payment History</h4>
                </div>
                <div class="card-body">
                    @if (!Model.Payments.Any())
                    {
                        <p class="text-muted">No payments recorded for this customer yet.</p>
                    }
                    else
                    {
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Amount Paid</th>
                                    <th>Mode</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var payment in Model.Payments)
                                {
                                    <tr>
                                        <td>@payment.PaymentDate.ToLocalTime().ToString("g")</td>
                                        <td>@payment.AmountPaid.ToString("C", indiaCulture)</td>
                                        <td>@payment.PaymentMode</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>