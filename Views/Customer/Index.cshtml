@* Path: LedgerLink/Views/Customer/Index.cshtml *@
@model IEnumerable<LedgerLink.Models.Customer>

@{
    ViewData["Title"] = "Customer List";
}

<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>

    <p>
        <a asp-action="Create" class="btn btn-primary">Add New Customer</a>
    </p>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.FullName)</th>
                <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.CurrentBalance)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.CurrentBalance)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a> |
                        @* QR Code link now uses item.Id directly *@
                        <a asp-action="ShowQrCode" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">QR Code</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>